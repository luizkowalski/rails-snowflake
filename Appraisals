# Appraisals
# Run `bundle exec appraisal install` to generate the gemfiles under gemfiles/.
# Then run tests with `bundle exec appraisal <rails_version> rake`.

appraise "rails-7.1" do
  gem "rails", "~> 7.1.0"
end

appraise "rails-7.2" do
  gem "rails", "~> 7.2.0"
end

appraise "rails-8.0" do
  gem "rails", "~> 8.0.0"
end
